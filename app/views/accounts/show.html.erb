<div class="row">
  <div class="medium-12 columns">
    <div class="clearfix">
      <h3 class="left">Balance: <%= number_to_currency(@account.balance) %></h3>
      <h3 class="right"><%= @account.account_name %> (<%= format_account_number(@account.account_number) %>)</h3>
    </div>

    <% if @transactions.empty? %>

      <h5>It looks like you don't have any transactions for this account. Let's add one.</h5>
      <%= get_create_transaction_button %>

    <% else %>

      <%= render 'month_period_form' %>

      <div id="transactions">
        <%= render 'all_transactions' %>
      </div>

      <%#= paginate @transactions, params: { controller: "accounts", action: 'show', id: @account.id, period: { date: "2012-12-01"} } %>

    <% end %>
  </div>
</div>