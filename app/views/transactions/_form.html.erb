<%= simple_form_for([@account, @transaction], html: {class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  
  <% amount = "0.00" %>
  <% if (params[:action] == "edit") %>
    <% amount = number_with_precision(@transaction.amount, precision: 2) %>
  <% end %>

  <div class="form-inputs">
    <%= f.association :account,
                      label_method: :account_name,
                      collection: current_user.accounts.all(order: 'account_name'),
                      selected: @account.id,
                      include_blank: false %>

    <%= f.input :description,
                required: true,
                autofocus: true %>

    <%= f.input :transaction_type,
                collection: get_transaction_types,
                include_blank: false,
                required: true %>

    <%= f.input :amount,
                as: :string,
                input_html: { value: amount },
                required: true %>

    <%= f.input :date_of,
                as: :date,
                required: true %>

    <%= f.association :category, label_method: :category_name, selected: '22' %>

    <%= f.input :notes,
                as: :text %>

    <%= f.input :transaction_cleared %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to "Cancel", :back %>
  </div>
<% end %>
